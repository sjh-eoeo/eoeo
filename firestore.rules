rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is active
    function isActive() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'active';
    }
    
    // Users collection - authenticated users can read all users, only admins can write
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Videos collection - all authenticated users can read/write
    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Profiles collection - all authenticated users can read/write
    match /profiles/{profileId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Payments collection - all authenticated users can read/write
    match /payments/{paymentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Config collection (brands, etc) - authenticated users can read, admins can write
    match /config/{document} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // ===== SEEDING SYSTEM COLLECTIONS =====
    
    // Seeding Brands - authenticated users can read/write
    match /seeding-brands/{brandId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Projects - authenticated users can read/write
    match /seeding-projects/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Creators - authenticated users can read/write
    match /seeding-creators/{creatorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Reach Outs - authenticated users can read/write
    match /seeding-reach-outs/{reachOutId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Negotiations - authenticated users can read/write
    match /seeding-negotiations/{negotiationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Drafts - authenticated users can read/write
    match /seeding-drafts/{draftId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Seeding Payments - authenticated users can read/write
    match /seeding-payments/{paymentId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Project Metadata (for negotiation system) - authenticated users can read/write
    match /project-metadata/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // Negotiation Projects - authenticated users can read/write
    match /negotiation-projects/{projectId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAdmin();
    }
  }
}
